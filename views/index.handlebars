<div class ="container">
	<div class="row" align="center">
		<img class="burgersize center-block" src="/assets/img/burger.png">
		<br />
		<h1 class="red-title">Eat-Da-Burger!</h1>
	</div>

	<div class="row">
		<div class="col">
		
		<table class="table table-bordered">
			{{#each burgers}}
			<tr align="right">
				{{#unless devoured}}
					<td align="center" padding="20px;">{{id}}.  {{burger_name}}</td>
					<td width="100px"><button class="devour-burger" type="button" data-id="{{id}}" data-newDevour="{{devour}}">Devour It</button></td>
					
				{{/unless}}
			</tr>
			{{/each}}

		</table>
		</div>

		<div class="col">
		<ol>
		{{#each burgers}}
			{{#if devoured}}
				<li>{{burger_name}}</li>
			{{/if}}
		{{/each}}
		</ol>
		</div>
	</div>

	<div class="row" align="center">
		<form class="create-form">
			<div class="form-group">
    			<input type="text" id="newBurg" name="name">
  			</div>
			<button type="submit">Submit</button>
  			<p>Enter a burger you would like to eat and click "Submit".</p>
		</form>
	</div>

</div> <!--End containter -->
