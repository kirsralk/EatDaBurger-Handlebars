<div class ="container">
	<div class="row" align="center">
		<img class="burgersize center-block" src="/assets/img/burger.png">
		<br />
		<h1 class="red-title">Eat-Da-Burger!</h1>
	</div>

	<div class="row spacer"> <!--Empty div for spacing --></div>

	<div class="row">
		<div class="col">
		
		<table class="table">
			{{#each burgers}}
			<tr align="right">
				{{#unless devoured}}
					<td class="align-middle whitebg table-bordered" align="center">{{id}}.  {{burger_name}}</td>
					<td class="table-borderless" width="120px" style="border: none;"><button class="devour-burger btn btn-light" type="button" data-id="{{id}}" data-newDevour="{{devour}}">Devour It</button></td>
					
				{{/unless}}
			</tr>
			{{/each}}

		</table>
		</div>

		<div class="col">

		<table class="table table-bordered">
		<tr>
		{{#each burgers}}
			{{#if devoured}}
				<td class="eaten">{{id}}.  {{burger_name}}</td>
			{{/if}}
		</tr>	
		{{/each}}

		</table>
		</div>
	</div>

	<div class="row" align="center">
		<form class="create-form">
			<div class="form-group">
    			<input type="text" id="newBurg" name="name" style="width: 300px; height: 75px;">
  			</div>
			<button class="btn btn-primary" type="submit" style="margin-top: 10px;">Submit</button>
			<br />
  			<p>Enter a burger you would like to eat and click "Submit".</p>
		</form>
	</div>

</div> <!--End containter -->
