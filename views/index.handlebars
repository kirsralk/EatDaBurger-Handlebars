<h1>Eat Da Burger</h1>

<h2>Burgers to Devour</h2>

<div id="uneaten">
<ol>
  {{#each burgers}}
      {{#unless devoured}}
          <li>{{burger_name}}
          <button class="devour-burger" type="button" data-id="{{id}}" data-newDevour="{{devour}}">Devour It</button>
          </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<h2>Devoured Burgers</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
          <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="newBurg" name="name">
  </div>

  <button type="submit">Submit</button>
  <p>Enter a burger you would like to eat and click "Submit".</p>
</form>
